<%- include('includes/head')%>
<%- include('includes/nav')%>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-5">
      <h1 class="text-center">Agenda</h1>
      <p class="text-center lead">Seus contatos est√£o abaixo</p>

      <%- include ('includes/messages')%>
      <form action="/contato/register" method="POST" class="font-weight-light">
        <input type="hidden" name="_csrf" value="<%-csrfToken%>" />

        <div class="row">
          <div class="col">
            <label class="my-3 font-weight-light">Nome</label>
            <input
              type="text"
              class="form-control"
              name="nome"
              placeholder="Nome"
            />
          </div>
          <div class="col">
            <label class="my-3">Sobrenome</label>
            <input
              type="text"
              class="form-control"
              name="sobrenome"
              placeholder="Sobrenome"
            />
          </div>
        </div>
        <div class="form-group">
          <label class="my-3">Email</label>
          <input
            type="email"
            class="form-control"
            name="email"
            placeholder="Email"
          />
        </div>
        <div class="form-group">
          <label class="my-3">Telefone</label>
          <input
            type="tel"
            class="form-control"
            name="telefone"
            placeholder="Telefone"
          />
        </div>

        <button type="submit" class="btn btn-success mt-4">Salvar</button>
      </form>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>

<%- include('includes/footer')%>
